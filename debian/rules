# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1
NOW := $(shell date "+%Y%m%d")

FAKEROOT = fakeroot

configure: config-stamp
config-stamp:
	dh_testdir
	@printf "\n == CONFIGURE ==\n\n"
	./configure --prefix=/usr --disable-shared CXX="ccache g++"
	touch $@

build: build-stamp
build-stamp: configure
	dh_testdir
	@printf "\n == BUILD ==\n\n"
	$(MAKE) -j $(nproc) CXXFLAGS="-std=c++17 -g -O0" CXX="ccache g++"
	touch $@

clean:
	dh_testdir
	dh_testroot
	@printf "\n == CLEAN ==\n\n"
#	rm -fr debian/tmp

distclean:
	-make -i -C _build distclean
	rm -rf *~ debian/*~ debian/files* debian/substvars

install: build
	dh_testdir
	dh_testroot
	dh_installdirs
	@printf "\n == INSTALL ==\n\n"
	$(MAKE) install DESTDIR=$(PWD)/debian/tmp

## binary-indep:	checkroot build
binary-indep:
# We have nothing to do by default.

binary-arch: install
	@printf "\n == PACKAGE ==\n\n"
	mkdir -p debian/tmp/DEBIAN
#	dh_installdirs --sourcedir=$(PWD)/debian/tmp DEBIAN
	dh_testdir
	dh_testroot
	dh_installchangelogs -XChangeLog
	dpkg-gencontrol
	dh_md5sums
#	dh_builddeb -- -b debian/tmp/
	dpkg-deb -b debian/tmp/ ../underpass_$(NOW)_$(DEB_BUILD_ARCH).deb

define checkdir
	test -f debian/rules
endef

# Below here is fairly generic really

binary:	binary-indep binary-arch

checkroot:
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot


